@model Cart

@{
    ViewBag.Title = "Koszyk";
    Layout = "_Layout";
}

<h2>Koszyk użytkownika @Model.UserId o ID @Model.Id</h2>
@if (@Model.Products != null)
{
    foreach (var product in @Model.Products)
    {
        <p>@product.Id; @product.Name; @product.Price zł; @product.Count <a asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id">+</a> <a asp-controller="Cart" asp-action="Remove" asp-route-id="@product.Id">-</a></p>
    }
    
    @if (@Model.Products.Count > 0)
    {
        <a asp-controller="Cart" asp-action="Order">Złóż zamówienie</a>
    }
    
}